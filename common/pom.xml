<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ezbake</groupId>
        <artifactId>ezbake-common-cpp-parent</artifactId>
        <version>2.1-SNAPSHOT</version>
    </parent>

    <artifactId>ezbake-common-cpp</artifactId>
    <packaging>nar</packaging>
    <name>EzBake Common API Library</name>

    <properties>
        <rpm.artifact.name>ezbake-common</rpm.artifact.name>
    </properties>

    <dependencies>
        <dependency>
            <groupId>ezbake</groupId>
            <artifactId>ezbake-base-thrift</artifactId>
            <type>nar</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.maven-nar</groupId>
                <artifactId>nar-maven-plugin</artifactId>
                <version>3.2.2</version>
                <configuration>
                    <linker>
                        <sysLibs>
                            <sysLib>
                                <name>boost_filesystem</name>
                            </sysLib>
                            <sysLib>
                                <name>boost_system</name>
                            </sysLib>
                            <!--<sysLib>
                                <name>boost_thread-mt</name>
                            </sysLib>
                            <sysLib>
                                <name>pthread</name>
                            </sysLib>-->
                            <sysLib>
                                <name>thrift</name>
                            </sysLib>
                            <sysLib>
                                <name>ssl</name>
                            </sysLib>
                            <sysLib>
                                <name>crypto</name>
                            </sysLib>
                        </sysLibs>
                        <testOptions>
                            <testOption>-Bdynamic</testOption>
                            <testOption>-lboost_filesystem</testOption>
                            <testOption>-Bdynamic</testOption>
                            <testOption>-lboost_system</testOption>
                            <testOption>-Bdynamic</testOption>
                            <testOption>-lboost_thread-mt</testOption>
                            <testOption>-Bdynamic</testOption>
                            <testOption>-lpthread</testOption>
                        </testOptions>
                    </linker>
                    <tests>
                        <test>
                            <name>${project.artifactId}-shared-unittest</name>
                            <link>shared</link>
                            <run>true</run>
                        </test>
                    </tests>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>rpmbuild</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <configuration>
                            <requires combine.children="append">
                                <require>boost-filesystem</require>
                                <require>openssl</require>
                                <require>thrift = ${thrift.rpm.version}</require>
                                <require>ezbake-base-thrift &gt;= 2.1</require>
                            </requires>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
